{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": false,
        "jsx": "preserve",
        "importHelpers": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": [
            "esnext", "dom", "DOM.Iterable", "ScriptHost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts"
    ]
}